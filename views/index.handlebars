<h1 class="text-center">Burger Munch</h1>

<div class="container">

  <div class="row">
    <div class="col-md-6">
      <h2 class="text-center">Burgers to be munched</h2>
      <ul class="list-group">
        {{#each burgers}}
          {{#unless munched}}
            <li class="list-group-item li_active mb-2"><span>{{name}}<button class="munch float-right mr-1 btn btn-primary" type="button" data-id="{{id}}">Munch</button></span></li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-6">
      <h2 class="text-center">Munched burgers</h2>
      <ul class="list-group">
        {{#each burgers}}
          {{#if munched}}
            <li class="list-group-item li_passive mb-2"><span>{{name}}</span></li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <h2 class="text-center">Add a Burger</h2>
      <div id="input_box">
        <div class="form-group">
          <input id="bn" name="name" class="form-control" type="text" placeholder="Burger Name">
        </div>
        <button class="burger_add btn btn-success float-right" type="button">Add Burger</button>
      </div>
    </div>
  </div>

</div>
